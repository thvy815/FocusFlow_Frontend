<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icon nhóm -->
        <ImageView
            android:id="@+id/txtGroupIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/avatar4"
            android:contentDescription="Group Icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <!-- Tên nhóm -->
        <TextView
            android:id="@+id/txtGroupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Group name"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txtGroupIcon"
            app:layout_constraintTop_toTopOf="@id/txtGroupIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"/>

        <!-- Tên trưởng nhóm -->
        <TextView
            android:id="@+id/txtLeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Leader Name"
            android:textSize="14sp"
            android:textColor="#777777"
            app:layout_constraintStart_toStartOf="@id/txtGroupName"
            app:layout_constraintTop_toBottomOf="@id/txtGroupName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
