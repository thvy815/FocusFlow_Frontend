<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            android:id="@+id/focus_statistics_title"
            layout="@layout/item_title_pomodoro"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"

        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background">

                <!--Total Pomo-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/streakIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_fire"
                        android:contentDescription="Streak Icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/totalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Pomo"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/mpr1c_extrabold"
                            android:shadowRadius="2"/>

                        <TextView
                            android:id="@+id/totalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FF5722"
                            android:fontFamily="@font/mpr1c_bold"
                            android:shadowRadius="2"/>

                    </LinearLayout>
                </LinearLayout>

                <!-- Today Pomo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/ic_today"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_fire"
                        android:contentDescription="Streak Icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/todayTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today Pomo"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/mpr1c_extrabold"
                            android:shadowRadius="2"/>

                        <TextView
                            android:id="@+id/todayValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FF5722"
                            android:fontFamily="@font/mpr1c_bold"
                            android:shadowRadius="2"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:columnCount="1"
                android:id="@+id/FocusRecord"

                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:onClick="focusRecordClick"
                app:layout_constraintTop_toBottomOf="@id/values"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Focus Record"
                        android:textSize="20dp"
                        android:fontFamily="@font/mpr1c_bold"

                        android:layout_marginTop="5dp"
                        />
                    <ImageView
                        android:id="@+id/btnAdd"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_add"
                        android:backgroundTint="@color/white"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="add"
                        android:onClick="addRecordClick"
                        android:padding="8dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <include layout="@layout/item_focus_record"/>
                </LinearLayout>
            </GridLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Details_chart"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"

                app:layout_constraintTop_toBottomOf="@+id/FocusRecord"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:text="Details"
                    android:textSize="20sp"
                    android:layout_marginEnd="10dp"/>

                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/DetailsChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="16dp"
                    android:padding="8dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/Details_chart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:text="Trend"
                    android:textSize="20dp"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/Trendchart"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"

                    android:layout_marginTop="10dp"
                    android:layout_margin="16dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>