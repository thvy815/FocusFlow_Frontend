<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgr">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingTop="8dp">

                <!-- Text -->
                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/mpr1c_extrabold"
                    android:text="Profile"
                    android:textColor="@android:color/black"
                    android:textSize="35sp" />

                <!-- Icon -->
                <ImageView
                    android:id="@+id/btnSetting"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_setting"
                    android:backgroundTint="#1A1A1A"
                    android:contentDescription="Setting"
                    android:padding="10dp" />
            </LinearLayout>


            <!-- Avatar -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatarImage"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:contentDescription="Avatar"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle" />
            </FrameLayout>

            <!-- User Info -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textSize="22sp"
                android:textColor="#212121"
                android:fontFamily="@font/mpr1c_bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp" />
            <!-- Nút Nâng cấp Pro -->
            <Button
                android:id="@+id/btnUpgradePro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Upgrade to Pro"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/mpr1c_bold"
                android:backgroundTint="#FFA726"
                android:padding="12dp" />

            <!-- Overview -->
            <TextView
                android:id="@+id/overviewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/mpr1c_bold" />

            <!-- Streak + Score -->
            <LinearLayout
                android:id="@+id/StreakAndTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:weightSum="2">

                <!-- Streak Box -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/background">

                    <ImageView
                        android:id="@+id/streakIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_fire"
                        android:contentDescription="Streak Icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/streakValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="24sp"
                            android:textColor="#FF5722"
                            android:fontFamily="@font/mpr1c_bold" />

                        <TextView
                            android:id="@+id/streakTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Streak"
                            android:textSize="16sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/mpr1c_bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Total Score -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background">

                    <ImageView
                        android:id="@+id/XP_Icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_pet_mission"
                        android:contentDescription="XP Icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/scoreValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="24sp"
                            android:textColor="#FF5722"
                            android:fontFamily="@font/mpr1c_bold" />

                        <TextView
                            android:id="@+id/TotalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score"
                            android:textSize="16sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/mpr1c_bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Achievements -->
            <TextView
                android:id="@+id/achievementsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievements"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/mpr1c_bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:fillViewport="true"
                android:scrollbars="none"
                android:contentDescription="@string/app_name">

                <LinearLayout
                    android:id="@+id/achievementLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

